<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Include inertia macros -->
    <xacro:include filename="inertia_macros.xacro"/>

    <!--  COMMONLY USED COLORS -->
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>


    <!-- BASE LINK --> 
    <link name="base_link">
    </link>

    <!-- FRAME -->
    <joint name="frame_joint" type="fixed">
        <parent link="base_link"/>
        <child link="frame_link"/>
        <origin xyz = "0 0 0.024"/>
    </joint>

    <link name="frame_link">
        <visual>

            <geometry>
                <box size="0.13 0.045 0.02"/>
            </geometry>

            <material name="white"/>

            <origin xyz="0 0 -0.01" rpy="0 0 0" /> 
        </visual>

        <collision>

            <geometry>
                <box size="0.13 0.045 0.02"/>
            </geometry>

            <origin xyz="0 0 -0.01" rpy="0 0 0" /> 
        </collision>

        <!-- inertia -->
        <xacro:box mass="0.306" x="0.13" y="0.045" z="0.02" origin_xyz="0 0 -0.01" origin_rpy="0 0 0"/>

    </link>
    <!-- FRONT LEFT MOTOR ARM -->
    <joint name="fl_motor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="fl_motor"/>
        <origin xyz="0.0707 0.0707 0" rpy="0 0 ${-pi/4 - pi/2}"/>
    </joint>

    <link name="fl_motor">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <material name="orange"/>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_end_x mass="0.016" r="0.004" l="0.1" origin_xyz="0.0211 0 0" origin_rpy="0 0 0"/>
        
    </link>

    <!-- FRONT RIGHT MOTOR ARM -->
    <joint name="fr_motor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="fr_motor"/>
        <origin xyz="0.0707 -0.0707 0" rpy="0 0 ${pi/4 + pi/2}" />
    </joint>

    <link name="fr_motor">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <material name="orange"/>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_end_x mass="0.016" r="0.004" l="0.1" origin_xyz="0.0211 0 0" origin_rpy="0 0 0"/>

    </link>

    <!-- BACK LEFT MOTOR ARM -->
    <joint name="bl_motor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="bl_motor"/>
        <origin xyz="-0.0707 0.0707 0" rpy="0 0 ${-pi/4}" />
    </joint>

    <link name="bl_motor">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <material name="orange"/>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <origin xyz="0.05 0.05 0" rpy= "0 1.57 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_end_x mass="0.016" r="0.004" l="0.1" origin_xyz="0.0211 0 0" origin_rpy="0 0 0"/>

    </link>

    <!-- BACK RIGHT MOTOR ARM -->
    <joint name="br_motor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="br_motor"/>
        <origin xyz="-0.0707 -0.0707 0" rpy="0 0 ${pi/4}" />
    </joint>

    <link name="br_motor">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <material name="orange"/>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.004"/>
            </geometry>

            <origin xyz="0.05 0 0" rpy= "0 1.57 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_end_x mass="0.016" r="0.004" l="0.1" origin_xyz="0.0211 0 0" origin_rpy="0 0 0"/>

    </link>


    <!-- FRONT LEFT PROPELLER -->
    <joint name="fl_prop_joint" type="continuous">
        <parent link="fl_motor"/>
        <child link="fl_prop"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="fl_prop">
        <visual>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <material name="blue"/>
            
            <origin xyz="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <origin xyz="0 0 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_center_z mass="0.003" r="0.038" l="0.004"/>

    </link>

    <!-- FRONT RIGHT PROPELLER -->
     <joint name="fr_prop_joint" type="continuous">
        <parent link="fr_motor"/>
        <child link="fr_prop"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="fr_prop">
        <visual>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <material name="blue"/>

            <origin xyz="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <origin xyz="0 0 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_center_z mass="0.003" r="0.038" l="0.004"/>

    </link>

    <!-- BACK LEFT PROPELLER -->
     <joint name="bl_prop_joint" type="continuous">
        <parent link="bl_motor"/>
        <child link="bl_prop"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="bl_prop">
        <visual>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <material name="blue"/>

            <origin xyz="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <origin xyz="0 0 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_center_z mass="0.003" r="0.038" l="0.004"/>

    </link>

    <!-- BACK RIGHT PROPELLER -->
     <joint name="br_prop_joint" type="continuous">
        <parent link="br_motor"/>
        <child link="br_prop"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="br_prop">
        <visual>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <material name="blue"/>

            <origin xyz="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.004" radius="0.038"/>
            </geometry>

            <origin xyz="0 0 0"/>
        </collision>

        <!-- inertia -->
        <xacro:cyl_center_z mass="0.003" r="0.038" l="0.004"/>

    </link>
</robot>